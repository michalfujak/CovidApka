<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    >
    <!-- Images flag -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:padding="8dp"
        android:id="@+id/list_item_image_flag"
        />
    <!-- Context TextView information flag country -->
    <TextView
        android:id="@+id/list_item_context_text_country_flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/covid_data_list_items_text_context_flag_name"
        android:textColor="@color/color_list_covid_data_flag_text_view_text_color"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>